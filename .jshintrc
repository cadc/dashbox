{
  "globals": {
    /* MOCHA */
    "describe"   : false,
    "it"         : false,
    "before"     : false,
    "beforeEach" : false,
    "after"      : false,
    "afterEach"  : false
  },

  "node": true,

  "boss": true,
  "curly": true,
  "devel": true,
  "eqnull": true,
  "expr": true,
  "funcscope": true,
  "globalstrict": true,
  "loopfunc": true,
  "newcap": false,
  "noempty": true,
  "nonstandard": true,
  "sub": true,
  "undef": true,
  "unused": "vars",

  "esnext": true,
  "ignoreDelimiters": [
    {
      "start": "<%",
      "end": "%>"
    }
  ]
}
